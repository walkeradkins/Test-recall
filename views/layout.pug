doctype html
html
  head
    title="Recall"
    link(rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css")
    link(rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel='stylesheet' href='/stylesheets/reset.css')
    link(rel="stylesheet", href="/stylesheets/index.css")
    link(rel="stylesheet", href="/stylesheets/global.css")
    link(rel="stylesheet", href="/stylesheets/landing.css")
    link(rel="stylesheet", href="/stylesheets/login.css")
    link(rel="stylesheet", href="/stylesheets/signup.css")
    script(src="/javascripts/index.js" type="module" defer)
    script(src="/javascripts/postEdit.js" type="module")
    script(src="/javascripts/postDelete.js" type="module")
    script(src="/javascripts/delete-lists.js" type="module")
    script(src="/javascripts/edit-lists.js" type="module")
    script(src="/javascripts/list-task-edit.js" type="module")
    script(src="/javascripts/search.js" type="module")
    script(src="/javascripts/list-task-display.js" type="module")
    script(src="/javascripts/completed-task.js" type="module")
    script(src="/javascripts/login.js" type="module")
    script(src="/javascripts/main-list-summary.js" type="module")

  body
    if locals.authenticated
      //- span Welcome #{user.firstName}!
      div(class='header-display')
        form(action='/logout' method='post')
          button(type='submit') Logout
    else
      div(id='wrapper1')
        div(id='landingNav')
          div
            div(id='logoContainer')
              img(src="/img/RECALL4.png", alt="logo" id='logo')
          div(id='rightBtns')
            div(id='leftNav')
              a(href='/login' class='loginbtn') Login
              a(href='/signup' class='registerbtn') Register
            div(id='rightNav')
              form(method='post' action='/demo')
                button(type='submit') Demo
        div(id='callToAction')
          a(href='/signup' class='callToActionBtn') Sign Up Free
    block content
